{
   "compilerOptions": {
      "lib": [
         "es2019"
      ],
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "paths": {
         "@/*": ["./src/*"],
         "@src/*": ["./node_modules/clubeeo-core/src/*"]
      }
   },
   "exclude": ["tests", "node_modules", "tmp"]
}
